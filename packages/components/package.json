{
	"type": "module",
	"name": "@/components",

	"imports": {
		"#lib/*": "./src/lib/*",
		"#hooks/*": "./src/hooks/*",
		"#components/*": "./src/components/*"
	},

	"exports": {
		"./*": "./src/components/*.tsx",
		"./graph": { "import": "./src/components/graph/index.tsx" },
		"./data-table": { "import": "./src/components/data-table/index.tsx" },

		"./utils": "./src/lib/utils.tsx",
		"./theme.css": "./src/theme.css"
	},

	"scripts": {
		"fix": "biome check --write --unsafe",
		"check": "tsc --noEmit && biome check"
	},

	"dependencies": {
		"shadcn": "latest",

		"cmdk": "latest",
		"sonner": "latest",
		"lucide-react": "latest",

		"radix-ui": "latest",
		"@fontsource-variable/jetbrains-mono": "latest",
		"@radix-ui/react-use-controllable-state": "latest",

		"dagre": "latest",
		"@types/dagre": "latest",
		"@xyflow/react": "^12",

		"@tanstack/react-form": "latest",
		"@tanstack/react-table": "latest",
		"@tanstack/react-virtual": "latest",

		"clsx": "latest",
		"tailwind-merge": "latest",
		"tw-animate-css": "latest",
		"class-variance-authority": "latest"
	},
	"peerDependencies": {
		"react": "^19",
		"react-dom": "^19",

		"tailwindcss": "^4"
	}
}
