{
	"type": "module",
	"name": "@/ui",

	"imports": {
		"#lib/*": "./src/lib/*",
		"#hooks/*": "./src/hooks/*",
		"#components/*": "./src/components/*"
	},
	"exports": {
		"./theme.css": "./src/theme.css",
		"./styles.css": "./dist/styles.css",
		"./lib/*": { "import": "./src/lib/*.tsx" },
		"./hooks/*": { "import": "./src/hooks/*.tsx" },
		"./components/*": { "import": "./src/components/*.tsx" },
		"./components/table": { "import": "./src/components/table/index.tsx" },
		"./components/graph": { "import": "./src/components/graph/index.tsx" }
	},

	"scripts": {
		"fix": "biome check --write --unsafe",
		"check": "tsc --noEmit && biome check"
	},

	"dependencies": {
		"react": "^19",
		"react-dom": "^19",

		"dagre": "latest",
		"@types/dagre": "latest",
		"@xyflow/react": "^12",

		"sonner": "latest",
		"@headlessui/react": "latest",
		"@tanstack/react-form": "latest",
		"@tanstack/react-table": "latest",
		"@tanstack/react-router": "latest",

		"clsx": "latest",
		"tailwind-merge": "latest"
	}
}
