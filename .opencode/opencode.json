{
	"$schema": "https://opencode.ai/config.json",

	"mcp": {
    "grep": {
			"type": "remote",
			"url": "https://mcp.grep.app"
		},
		"shadcn": {
			"type": "local",
			"command": ["npx", "-y", "shadcn@latest", "mcp"]
		},
		"context7": {
			"type": "local",
			"command": ["npx", "-y", "@upstash/context7-mcp@latest"]
		}
	},

	"tools": {
    "grep_*": false,
		"shadcn_*": false,
		"context7_*": false
	}
}
