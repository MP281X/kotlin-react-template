{
	"type": "module",
	"name": "frontend",

	"imports": {
		"#lib/*": "./src/lib/*",
		"#static/*": "./static/*",
		"#routes/*": "./src/routes/*",
		"#components/*": "./src/components/*"
	},

	"scripts": {
		"dev": "rsbuild dev",

		"fix": "biome check --write --unsafe",
		"check": "tsc --noEmit && biome check",

		"build": "rsbuild build"
	},

	"dependencies": {
		"react": "^19",
		"react-dom": "^19",

		"@effect-atom/atom-react": "latest",

		"@tanstack/react-db": "latest",
		"@tanstack/react-router": "latest",
		"@tanstack/router-plugin": "latest",

		"@/ui": "workspace:*",
		"@/rpc": "workspace:*",
		"@/utils": "workspace:*"
	},
	"devDependencies": {
		"tailwindcss": "latest",
		"@tailwindcss/postcss": "latest",

		"@rsbuild/core": "^1.3",
		"@rsbuild/plugin-react": "^1",
		"@rsbuild/plugin-babel": "^1",
		"babel-plugin-react-compiler": "latest"
	}
}
